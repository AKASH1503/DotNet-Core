@model HomeDetailsViewModel

@{
    ViewBag.Title = "Details Page";
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class=card-header">
                <h1>@Model.employee.Name</h1>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top" src="~/images/abc.jpg" />
                <h4>Employee Id : @Model.employee.Id</h4>
                <h4>Email : @Model.employee.Email</h4>
                <h4>Department : @Model.employee.Department</h4>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="index" class="btn btn-primary">Back</a>
                <a href="a" class="btn btn-primary">Edit</a>
                <a href="a" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/Custom.js"></script>
}