            <div class="card-header">
                <h1>@employee.Name</h1>
            </div>
            <img class="card-img-top" src="~/images/abc.jpg"/>
            <div class="card-footer text-center">
                <a href="a" class="btn btn-primary">View</a>
                <a href="a" class="btn btn-primary">Edit</a>
                <a href="a" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
</div>